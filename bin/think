#!/usr/bin/env python

import sys

from sense.client import Client

client = Client()

command = sys.argv[1]

if command == 'remember':
    print(client.remember(sys.argv[2], sys.argv[3]))
elif command == 'remind':
    print(client.remind(sys.argv[2]))
elif command == 'rethink':
    print(client.rethink())
elif command == 'thoughts':
    for thought in client.thoughts():
        print(thought)
elif command in client.thoughts():
    client.call(command, sys.argv)
else:
    print('could not think of it')

